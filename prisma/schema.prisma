generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model SampleData {
  id                              Int       @id @default(autoincrement())
  sampleCode                      String
  sampleItemName                  String
  processingType                  String
  constructionNote                String
  color                           String
  customerName                    String

  customerRequirementWidthPercent   String
  customerRequirementLengthPercent  String
  customerRequirementWidth          String
  requirementWeight                 String

  finishingDate                   DateTime
  loom                            Int
  warpingNo                       Int
  yard                            Int

  afterDryerWidth                 String
  weavingPPI                      Int
  sanforizedPPI                   Int
  ppiPlus                         Int

  dryerSkew                       Float
  sanfoSkew                       Float
  afterWashSkew                   Float
  bowingTestRightHand             Float
  bowingTestLeftHand              Float

  washWidthPercentage             Float
  washLengthPercentage            Float

  washShrinkageWidth              String
  washShrinkagePPI                Int

  processingDetails               String
  remarks                         String

  createdAt                       DateTime @default(now())
  updatedAt                       DateTime @updatedAt
}

